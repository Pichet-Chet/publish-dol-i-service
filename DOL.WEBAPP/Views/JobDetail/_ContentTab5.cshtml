@model DOL.WEBAPP.Models.Response.SiteInformationResponse



<div class="row">

    <div class="col-12">
        <div class="card shadow mb-4">
            <a href="#collapseCardTab5" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardTab5">
                <h6 class="m-0 custom-text-collapse-header">แนบรูปภาพ - Cellular</h6>
            </a>
            <div class="collapse" id="collapseCardTab5">
                <div class="card-body">
                    <form class="tab5 needs-validation" id="tab5" novalidate>
                        <div class="row">
                            <div class="col-6 @(Model.SiteNetworkId == 2 ? "" : "d-none")">
                                <div class="file-upload custom-image-col-center">
                                    <label class="@(!string.IsNullOrEmpty(Model.Image11) ? "custom-form-label" : "custom-form-label-danger")">Router 4G (AR109)</label>
                                    <br />

                                    @if (!string.IsNullOrEmpty(Model.Image11))
                                    {
                                        <img id="image-show-11" src="@Model.Image11.ToString()" alt="Image" width="100%">
                                    }

                                    <div class="file-upload-content" id="file-upload-content-11">
                                        <img class="file-upload-image" src="#" alt="your image" id="file-upload-image-11" width="100%" />
                                    </div>
                                    <br />
                                    @{
                                        if (Model.SysStatusId != 4 || Model.SysStatusId == 9)
                                        {
                                            <label class="custom-btn-upload">
                                                <i class="fa fa-upload"></i>
                                                Browse
                                                <input type="file" size="60" id="file-upload-input-11" accept=".jpg,.png,.jpeg" onchange="readURL(this);">
                                            </label>
                                        }
                                    }
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

