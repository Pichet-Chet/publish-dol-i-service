    .custom-image-col-center {
        /*text-align: -webkit-center;*/
    }

    .custom-buttom-confirm {
        color: white;
        width: 185px;
        height: 53px;
        background: #545CD8 0% 0% no-repeat padding-box;
        border-radius: 27px;
        opacity: 1;
        border: 0;
    }

    .custom-buttom-download {
